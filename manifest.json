{
	"manifest_version": 2,
	"name": "Summarizer",
	"version": "1.0",

	"description": "Summarizes webpages",

	"permissions": [
		"tabs",
		"downloads",
		"*://*.smmry.com/*"
	],

	"icons": {
		"48": "icons/border-48.png"
	},

	"browser_action": {
		"browser_style": true,
		"default_popup": "popup/choose_page/choose_length_page.html",
		"default_icon": {
			"16": "icons/summarizer-icon-16.png",
			"32": "icons/summarizer-icon-32.png"
		}
	}
}